<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/orange_background"
        >

    <RelativeLayout android:id="@+id/scrollBar"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

        <LinearLayout android:id="@+id/firstElement"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:orientation="horizontal">

            <TextView android:id="@+id/currentWeightTextView"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/Wheel"
                      android:text="80.0"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/Wheel"
                      android:text="kg"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:orientation="horizontal"
                      android:layout_below="@+id/firstElement">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/DefaultText"
                      android:layout_marginRight="0dp"
                      android:text="Î”"/>

            <TextView android:id="@+id/differenceTextView"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/DefaultText"
                      android:layout_marginRight="0dp"
                      android:layout_marginLeft="5dp"
                      android:text="555"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/DefaultText"
                      android:layout_marginLeft="5dp"
                      android:text="kg"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="20dp">

        <RelativeLayout android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical">

                <ImageButton android:id="@+id/saveWeightImageButton"
                             android:layout_height="wrap_content"
                             android:layout_width="fill_parent"
                             android:src="@drawable/save_icon"
                             style="@style/DefaultButton"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/DefaultText"
                          android:text="speichern"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical">

                <ImageButton android:id="@+id/decreaseWeightImageButton"
                             android:layout_height="wrap_content"
                             android:layout_width="fill_parent"
                             android:layout_centerInParent="true"
                             android:src="@drawable/weight_decrease_icon"
                             style="@style/DefaultButton"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="weniger"
                          style="@style/DefaultText"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical">

                <ImageButton android:id="@+id/increaseWeightImageButton"
                             android:layout_height="wrap_content"
                             android:layout_width="fill_parent"
                             android:layout_centerInParent="true"
                             android:src="@drawable/weight_increase_icon"
                             style="@style/DefaultButton"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/DefaultText"
                          android:text="mehr"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

