<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Wheel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">70dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="DefaultText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
    </style>

    <style name="DefaultImage">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:textColor">@color/text_view</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Actionbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>